@model IEnumerable<mvcTest.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories Administration</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="card-header">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryEname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryPhoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryEname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryPhoto)
            </td>
            <td>
                <a  class="btn btn-primary"    asp-action="Edit" asp-route-id="@item.CategorId">Edit</a> |
                <a class="btn btn-primary"     asp-action="Details" asp-route-id="@item.CategorId">Details</a> |
                <a class="btn btn-primary"      asp-action="Delete" asp-route-id="@item.CategorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
